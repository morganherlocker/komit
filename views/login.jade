extends layout

block content
  div.container
    h1 Login
    hr

    row.col-md-6.col-md-offset-3
      form(role='form')
        div.form-group
          label(for='emailInput') Email
          input#emailInput.form-control(type='email', placeholder="Enter email")
        div.form-group
          label Password
          input#passwordInput.form-control(type='password', placeholder="Enter Password")

        div#registerFormButtonDiv
          submit.btn.btn-primary#registerDoneButton Login