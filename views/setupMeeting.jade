extends layout

block content
  div.container
    row
      h1 Setup Meeting
    hr

    row.col-md-6.col-md-offset-3
      h2 Attendees
      form
        div.control-group
          label(for='userInput') Name
          // this should autocomplete with known users
          input#nameInput.form-control(type='text')
        div.control-group
          label(for='userInput') Email
          // this should autocomplete with known users
          input#emailInput.form-control(type='text')
        div#addUserButtonDiv
          button#addUserButton.btn.btn-warning.btn-sm Add User
        table.table
          thead
            th name
            th email
          tbody
            td John Doe
            td doe@email.com
        div#startMeetingButtonDiv
            submit.btn.btn-primary#startMeetingButton Send Invites